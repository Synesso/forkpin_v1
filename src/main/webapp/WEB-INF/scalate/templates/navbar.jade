-@ val appName: String
-@ val clientId: String

div{:class => "navbar navbar-inverse navbar-fixed-top"}
  div{:class => "navbar-inner"}
    div{:class => "container"}
      a{:class => "brand", :href => "/", :style => "border: none;"} #{appName}
      div{:class => "nav-collapse collapse"}
        ul{:class => "nav pull-right", :style => "top: 5px;"}
          li
            div{:id => "gConnect"}
              button(class="g-signin"
                data-scope="https://www.googleapis.com/auth/plus.login"
                data-requestvisibleactions="http://schemas.google.com/AddActivity"
                data-clientId=clientId
                data-accesstype="offline"
                data-callback="onSignInCallback"
                data-theme="dark"
                data-cookiepolicy="single_host_origin")
          li
            div{:id => "userMenu", :class => "button-group", :style => "display: none;"}
              button(class="btn btn-success dropdown-toggle" data-toggle="dropdown" style="margin-top: 0px")
                span{:id => "userName"}
                span{:class => "caret"}
              ul{:class => "dropdown-menu"}
                li
                  a{:href => "javascript:void(0);", :id => "gDisconnect"} Log Out
