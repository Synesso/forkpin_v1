div(id="acceptChallengeModal" class="modal hide" data-show="false")
  div(class="modal-header")
    button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
    h3 Accept Challenge
  div(class="modal-body")
    div(class="text-center")
      img(id="challengerProfilePic" class="img-circle")
    div(class="text-center" id="challengerName")
  div(class="modal-footer")
    a(id="accChYes" class="offset4 span4 btn btn-success") Accept
    a(href="javascript:void(0);" class="btn" data-dismiss="modal") Ignore
